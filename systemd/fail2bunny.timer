[Unit]
Description=Run Fail2Bunny every 6 hours
Documentation=https://github.com/yourusername/fail2bunny

[Timer]
# Run 5 minutes after boot
OnBootSec=5min

# Then every 6 hours
OnUnitActiveSec=6h

# Add randomized delay up to 5 minutes to avoid thundering herd
RandomizedDelaySec=5min

# Persist timer across reboots
Persistent=true

[Install]
WantedBy=timers.target
